#!/bin/bash

set -eu -o pipefail

function inArray() {
	needle=$1
	shift
	for haystack
	do [[ "$haystack" == "$needle" ]] && return 0
	done
	return 1
}


if [[ "${1:-}" == compose ]]; then
	shift;
	docker-compose "${@}"
elif [[ ${DOCKER_BUILDKIT:-0} -eq 1 ]] || inArray "buildx" "$@"; then

	args=()
	for arg; do
		[ "$arg" != "buildx" ] && args+=("$arg")
	done

	if [ "${#args[@]}" -eq 0 ]; then
		exec /usr/libexec/docker/cli-plugins/docker-buildx
	else
		exec /usr/libexec/docker/cli-plugins/docker-buildx "${args[@]}"
	fi
else
	exec podman "${@}"
fi
